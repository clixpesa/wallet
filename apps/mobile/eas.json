{
  "cli": {
    "version": ">= 7.8.5"
  },
  "build": {
    "development:simulator": {
      "distribution": "internal",
      "developmentClient": true,
      "channel": "development",
      "env": {
        "APP_ENV": "development"
      },
      "ios": {
        "simulator": true,
        "image": "latest"
      }
    },
    "development": {
      "distribution": "internal",
      "developmentClient": true,
      "channel": "development",
      "env": {
        "APP_ENV": "development",
        "NODE_ENV": "development"
      },
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "image": "latest"
      }
    },
    "staging": {
      "distribution": "store",
      "channel": "staging",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "APP_ENV": "staging"
      },
      "ios": {
        "image": "latest"
      },
      "autoIncrement": true
    },
    "production": {
      "env": {
        "APP_ENV": "production",
        "NODE_ENV": "production"
      },
      "channel": "production",
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {},
    "staging": {}
  }
}
